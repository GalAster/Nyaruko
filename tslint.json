{
    "rules": {
        "semicolon": [true, "never"],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "indent": [true, "spaces", 4],
        "object-literal-key-quotes": [true, "as-needed"],
        "no-var-requires": true,
        "member-access": false,
        "trailing-comma": true
    },
    "linterOptions": {
        "exclude": [
            "**/dist/**",
            "*.d.ts"
        ]
    }
}